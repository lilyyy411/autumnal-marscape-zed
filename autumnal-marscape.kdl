            syntax "link_uri"
        }
    }
    modifier {
        color "doc-comment"
        apply {
            syntax "comment.doc"
        }
    }
    modifier {
        color "string-escape"
        apply {
            syntax "string.escape"
        }
    }
    player {
        cursor "player-1"
        selection "player-1" alpha=0.23921569
        background "player-1"
    }
    player {
        cursor "player-2"
        selection "player-2" alpha=0.23921569
        background "player-2"
    }
}

