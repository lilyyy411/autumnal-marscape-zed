/*
    Autumnal Marscape v0.1.0
    By Lilyyy411
    Made using [zeddy](https://github.com/lilyyy411/zeddy)

    This theme is a showcase of the new tool `zeddy`. The theme is built around the
    idea of basing everything on transformations on a single base color, preserving
    at least one property (luminance, chroma, or hue) of the base color whenever possible.
    This allows me to reap the benefits of LCH's perceptual uniformity
    while barely having to think about whether the colors actually work.
*/
meta {
    name "Autumnal Marscape"
    author "Lilyyy411"
}

palette {
    // The one and only holy salmon
    salmon "#DF8F77" saturate=0.1

    // background/selected
    midnight-background "salmon" desaturate=0.80 darken=0.875 hue-shift=-30.0
    midnight-selected "midnight-background" saturate=0.1 lighten=0.2
    dust-background "salmon" desaturate=0.60 darken=0.6520
    dust-selected "dust-background" saturate=0.1 lighten=0.2

    // success/warn/error
    success-bg "salmon" hue-shift=70.0
    success "success-bg" desaturate=0.2 lighten=0.4
    success-border "success-bg" darken=0.2
    warn-bg "salmon" hue-shift=30.0
    warn "warn-bg" desaturate=0.2 lighten=0.4
    warn-border "warn-bg" darken=0.2
    error-bg "salmon" hue-shift=-10.0 saturate=0.3
    error "error-bg" lighten=0.4
    error-border "error-bg" darken=0.2

    // text
    base-text "salmon" desaturate=0.5 lighten=0.90
    accented "salmon" hue-shift=-25.0 desaturate=0.4 lighten=0.4
    keyword "salmon" hue-shift=-95.0 desaturate=0.5
    type "salmon" hue-shift=25.0 saturate=0.1
    function "salmon" saturate=0.1
    number "salmon" hue-shift=70.0 desaturate=0.4 lighten=0.2
    punctuation "salmon" lighten=0.15 desaturate=0.55
    hint "salmon" darken=0.4 desaturate=0.5
    disabled "salmon" darken=0.25 desaturate=0.8
    muted "salmon" hue-shift=-25.0 desaturate=0.4

    // strings and comments
    string "salmon" hue-shift=-25.0
    string-escape "doc-comment" saturate=0.1
    special-string "salmon" hue-shift=-125.0
    comment "muted"
    doc-comment "salmon" darken=0.2 desaturate=0.50

    // collaboration
    player-1 "accented" darken=0.4
    player-2 "number"
}

